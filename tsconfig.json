{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES5",
    "module": "CommonJS",
    "removeComments": true,
    "allowJs": true,
    "strict": true,
    "lib": ["es2015.promise", "es5"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__/*.js",
    "**/__mocks__/*.ts"
  ]
}
